{
  "name": "ollm",
  "version": "1.0.0",
  "description": "A simple web interface for Ollama with direct HTTP API integration",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run security && npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && serve -s build -p ${FRONTEND_PORT:-3000}",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test:coverage",
    "test:backend": "cd backend && npm test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run type-check",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "audit": "npm run audit:frontend && npm run audit:backend",
    "audit:frontend": "cd frontend && npm audit",
    "audit:backend": "cd backend && npm audit",
    "audit:fix": "npm run audit:fix:frontend && npm run audit:fix:backend",
    "audit:fix:frontend": "cd frontend && npm audit fix",
    "audit:fix:backend": "cd backend && npm audit fix",
    "security": "npm run audit || true",
    "security:strict": "npm run audit",
    "quality": "npm run lint && npm run test",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "validate-commit": "commitlint --from=HEAD~1 --to=HEAD --verbose"
  },
  "keywords": [
    "ollama",
    "chat",
    "ai",
    "react",
    "typescript",
    "node",
    "express",
    "http-api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.55.0",
    "concurrently": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "serve": "^14.2.1"
  }
}
